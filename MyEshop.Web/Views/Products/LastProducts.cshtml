@model IEnumerable<MyEshop.DomainClass.Product>
@using MyEshop.DomainClass
@using MyEshop.Business

<section class="last-products">
    <header><h3> جدیدترین محصولات </h3> <a href=""> آرشیو </a></header>
    <article>

        @foreach (Product product in Model)
        {
            <div class="col-md-4 col-sm-6">
                <div class="border-radius">
                    <span>
                        <img src="@PathTools.ProductImageThumbPath@product.ProductImageName" style="margin:5px 7px;">
                    </span>
                    <h2> @product.ProductTitle </h2>
                    <h6>افزودن به لیست مقایسه <input type="checkbox"></h6>
                    <span class="col-md-9 col-sm-9 col-xs-9 price-layer">
                        <label>@product.Price.ToString("#,0")  تومان</label>
                    </span>
                    <a href="" class="col-md-2 col-sm-2 col-xs-2 col-md-offset-1 col-sm-offset-1 col-xs-offset-1 buy-button border-radius">
                        <label><i class="fa fa-shopping-basket"></i></label>
                    </a>
                </div>
            </div>
        }

        <div class="clearfix"></div>
    </article>
</section>