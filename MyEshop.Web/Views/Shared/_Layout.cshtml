                    </ul>
                </div>
                <!-- End Clientarea and Basket -->

            </div>
            <div class="col-md-6 col-sm-5 col-xs-5 left-nav">

                <!-- Social -->
                <div class="socials">
                    <ul>
                        <li><a href="" class="social-icon" data-balloon=" اینستاگرام " data-balloon-pos="down"><i class="fa fa-instagram"></i></a></li>
                        <li><a href="" class="social-icon" data-balloon=" لینکداین " data-balloon-pos="down"><i class="fa fa-linkedin"></i></a></li>
