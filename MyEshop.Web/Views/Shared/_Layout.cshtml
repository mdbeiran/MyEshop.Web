            <div class="clearfix"></div>
        </div>
    </header>
    <!-- End site Header -->
    <!-- Mega Menu -->
    @Html.Partial("_MegaMenu")
    <!-- End Mega Menu -->
    <!-- slider -->
    @RenderSection("Slider", false)
    <!-- End slider -->

    <div class="container margin-top-25">
        <aside class="col-md-3 col-sm-4 right-side-content">
            @RenderSection("Filters", false)
            <!-- Basket -->
            <section class="border-radius basket-side">
                <header><h3> سبد خرید شما  </h3></header>
                <article>
                    <ul>
                        <li>
                            <img class="border-radius" src="/Content/img/1.jpg">
                            <div class="left-basket">
                                <a href="">محصول شماره یک <span class="border-radius"> 2 </span></a>
                            </div>
                        </li>
                        <li>
                            <img class="border-radius" src="/Content/img/1.jpg">
                            <div class="left-basket">
                                <a href="">محصول شماره یک <span class="border-radius"> 2 </span></a>
                            </div>
                        </li>
                        <li>
                            <img class="border-radius" src="/Content/img/1.jpg">
                            <div class="left-basket">
                                <a href="">محصول شماره یک <span class="border-radius"> 2 </span></a>
                            </div>
                        </li>
                    </ul>
                    <a href="" class="show-basket-button border-radius">مشاهده سبد خرید</a>
                </article>
            </section>
            <!-- End Basket -->
            <!-- compare -->
            <section class="border-radius compare-side">
                <header><h3> لیست مقایسه </h3></header>
                <article>
                    <ul>
                        <li>
                            <i class="delete-compare">X</i>
                            <a href="">محصول شماره یک </a>
                        </li>
                        <li>
                            <i class="delete-compare">X</i>
                            <a href="">محصول شماره یک </a>
                        </li>
                        <li>
                            <i class="delete-compare">X</i>
                            <a href="">محصول شماره یک </a>
                        </li>
                    </ul>
                    <a href="" class="show-compare-list border-radius">مشاهده لیست مقایسه</a>
                </article>
            </section>
            <!-- End compare -->
            <!--Products Category -->
            @Html.Action("ProductsCategory", "Products", new { area = "" })
            <!-- End Products Category -->
            <!-- Category -->
            <!-- End Category -->
        </aside>
        <div class="col-md-9 col-sm-8 left-side-content">

            @RenderBody()

        </div>
        <div class="clearfix"></div>
    </div>

    @* Partial View Footer *@
    @Html.Action("Footer", "Home", new { area = "" })
    @* Partial View Footer *@

    @Html.Partial("_FooterRefrences")

    @RenderSection("Scripts", false)

</body>

</html>
