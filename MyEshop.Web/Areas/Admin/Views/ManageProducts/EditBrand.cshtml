@model MyEshop.DomainClass.ProductBrand

@{
    ViewBag.Title = "ویرایش برند";
}

<h2 style="padding-top:10px;">ویرایش برند</h2>

@if (ViewBag.brandError)
{
    <div class="alert alert-danger">
        عنوان برند تکراری می باشد !
    </div>
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.BrandId)
        @Html.HiddenFor(model=>model.IsDelete)

        <input type="text" name="oldBrandTitle" value="@Model.BrandTitle" hidden />

        <div class="form-group">
            @Html.LabelFor(model => model.BrandTitle, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-5">
                @Html.EditorFor(model => model.BrandTitle, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.BrandTitle, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="ویرایش برند" class="btn btn-warning" />
            </div>
        </div>
    </div>
}

<div>
    <a href="@Url.Action("ProductBrands","ManageProducts")" class="btn btn-primary">بازگشت به لیست</a>
</div>
