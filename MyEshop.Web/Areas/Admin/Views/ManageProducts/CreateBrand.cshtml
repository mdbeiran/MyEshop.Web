@model MyEshop.DomainClass.ProductBrand

@{
    ViewBag.Title = "افزودن برند";
}

<h2 style="padding-top:10px;">افزودن برند</h2>

@using (Html.BeginForm("CreateBrand", "ManageProducts", new { id = "form" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.BrandTitle, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-5">
                @Html.EditorFor(model => model.BrandTitle, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.BrandTitle, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="ثبت برند" class="btn btn-success" />
            </div>
        </div>
    </div>
}

<script>
    $.validator.unobtrusive.parse("#form");
</script>