@model MyEshop.DomainClass.User

@{
    ViewBag.Title = "ویرایش اطلاعات کاربر";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>ویرایش اطلاعات کاربر</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">

    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.UserId)
    @Html.HiddenFor(model => model.RoleId)
    @Html.HiddenFor(model => model.Email)
    @Html.HiddenFor(model => model.Password)
    @Html.HiddenFor(model => model.ActiveCode)
    @Html.HiddenFor(model => model.RegisterDate)
    @Html.HiddenFor(model => model.IsActive)
    @Html.HiddenFor(model => model.IsDelete)
    @Html.HiddenFor(model => model.ViewByAdmin)

    <section>
        <div class="container">
            <div class="row">
                <div class="col-sm-9 pull-left">

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="ویرایش" class="btn btn-warning" />
                        </div>
                    </div>

                    <div>
                        <a href="/User" class="btn btn-primary">بازگشت</a>
                    </div>
                </div>

                @Html.Action("UserSidebar")
            </div>
        </div>
    </section>

</div>
}
